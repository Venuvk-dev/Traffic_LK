# Server Configuration
PORT=5000
NODE_ENV=development

# Database - Use MongoDB Atlas connection string
# Example: mongodb+srv://username:password@cluster.mongodb.net/traffic-fine-system?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/traffic-fine-system?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Client URL
CLIENT_URL=http://localhost:5173

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration
# Set to 'true' to enable SMS notifications, 'false' to disable
ENABLE_SMS_NOTIFICATIONS=true

# SMS Provider: 'dialog', 'mobitel', 'twilio', or 'mock'
SMS_PROVIDER=mock

# Dialog SMS API (Sri Lankan provider)
DIALOG_SMS_URL=https://api.dialog.lk/sms/send
DIALOG_API_KEY=your-dialog-api-key

# Mobitel SMS API (Sri Lankan provider)
MOBITEL_SMS_URL=https://api.mobitel.lk/sms/send
MOBITEL_API_KEY=your-mobitel-api-key

# Twilio SMS API (International provider)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SMS Sender ID (appears as sender name)
SMS_SENDER_ID=TrafficLK

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true